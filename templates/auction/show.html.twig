{% extends 'base.html.twig' %}

{% block title %}Auction{% endblock %}

{% block body %}
    <h1>Auction</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ auction.id }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ auction.price }}</td>
            </tr>
            <tr>
                <th>DateOpen</th>
                <td>{{ auction.dateOpen ? auction.dateOpen|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>DateClose</th>
                <td>{{ auction.dateClose ? auction.dateClose|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ auction.createdAt ? auction.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ auction.image }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ auction.status }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ auction.slug }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ auction.UpdatedAt ? auction.UpdatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_auction_index') }}">back to list</a>

    <a href="{{ path('app_auction_edit', {'id': auction.id}) }}">edit</a>

    {{ include('auction/_delete_form.html.twig') }}
